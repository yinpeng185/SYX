/* pages/news/notice/notice.wxss */
@import "../public/public.wxss";
page {
  background-color: #f1f4f6;
  padding-top: 20rpx;
  height: 100%;
  overflow: hidden
}
.message_Box{
  width: 100%;
  background-color: #FFFFFF;
  overflow: auto
}
.middle_text{
  float: left;
}
.message_time{
  font-size: 20rpx;
  color: #999999;
  margin-left: 20rpx;
  margin-top: 15rpx;
  padding: 0;
}
.message_Item{
  width: 100%;
  margin-top: 0rpx;
}
.notice_head{
  width: 100%;
}
.notice_icon{
  width: 80rpx;
  height: 80rpx;
  margin-top: 20rpx;
  margin-left: 30rpx;
  border-radius: 40rpx;
  float: left;
}
.notice_head_text{
  margin-left: 20rpx;
  margin-right: 30rpx;
  margin-top: 30rpx;
  float: left;
}
.notice_icon_box{
  margin: 0;
  padding: 0;
  float: left;
}
.notice_content{
  float: left;
  margin-right: 30rpx;
}

.notice_title{
  width: 590rpx;
  font-size: 26rpx;
  color: #333333;
  margin: 0;
  padding: 0;
  display: block;
  margin-top: 30rpx;
  margin-left: 20rpx;
  word-wrap: break-word;
  word-break: keep-all;
  overflow: hidden;
}
.notice_date{
  display: block;
  margin-top: 20rpx;
  font-size: 22rpx;
  margin-left: 20rpx;
  color: #999999;
}
.notice_content_img{
  width: 590rpx;
  height: 316rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  margin-top: 20rpx;
}
.line_block{
  width: 100%;
  height: 1px;
  margin: 0;
  background-color: #E5E5E5;
  float: left;
  margin-bottom: 0rpx;
}