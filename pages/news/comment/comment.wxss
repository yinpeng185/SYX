/* pages/news/comment/comment.wxss */
@import "../public/public.wxss";
page {
  background-color: #f1f4f6;
  padding-top: 20rpx;
  height: 100%;
  overflow: hidden
}
.message_Box{
  width: 100%;
  background-color: #FFFFFF;
  overflow: auto
}
.middle_text{
  float: left;
}
.message_time{
  font-size: 20rpx;
  color: #999999;
  margin-left: 20rpx;
  margin-top: 15rpx;
  padding: 0;
}
.message_Item{
  height: 120rpx;
  width: 100%;
  margin-top: 0rpx;
}
.newsxitiao {
  height: 1rpx;
  width: 100%;
  background-color: #ccc;
  position: fixed;
  left: 0rpx;
}
.avatar{
  width: 80rpx;
  height: 80rpx;
  float: left;
  margin-left: 30rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 40rpx;
}
.user_name{
  display: block;
  font-size: 26rpx;
  padding: 0;
  height: 26rpx;
  margin-left: 20rpx;
  margin-top: 32rpx;
  margin-bottom: 0rpx;
}
.line_block{
  width: 100%;
  height: 1px;
  margin: 0;
  background-color: #E5E5E5;
  /* float: left; */
  margin-bottom: 0rpx;
}
.article_img_box{
  float: right;
  margin-top: 20rpx;
  height: 80rpx;
  width: 80rpx;
  margin-right: 30rpx;
}
.article_img{
  height: 80rpx;
  width: 80rpx;
  padding: 0;
  margin: 0;
}
.load_more{
  width: 100%;
  text-align: center;
  font-size: 22rpx;
  color: #999999;
  height: 80rpx;
  line-height: 80rpx;
  margin-bottom: 20rpx;
}