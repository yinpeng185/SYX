/* template */
.item {
  width: 97%;
  height: auto;
  margin-left: 1%;
  margin-right: 1%;
  margin-bottom: 8%;
  /* margin-top: 1%; */
  display: inline-block;
  border: 0px solid #fff;
  background-color: #ffffff;
  border-radius: 16rpx;
}

.image {
  width: 100%;
  margin: 0 auto;
  border-radius: 14rpx;
}

.time-text {
  font-size: 28rpx;
  color: #333;
  /*超出一行文字自动隐藏 */
  overflow: hidden;
  /*文字隐藏后添加省略号 */
  text-overflow: ellipsis;
  /*强制不换行 */
  white-space: nowrap;
  margin-top: 15rpx;
  margin-left: 10rpx;
  /* background-color: red; */
}

